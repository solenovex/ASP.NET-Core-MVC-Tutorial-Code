@using Heavy.Web.Controllers
@model IList<SomeModel>

<form asp-action="List" method="post">
    @for (var i = 0; i < 10; i++)
    {
        <div class="form-group row">
            <label class="col-sm-2" asp-for="@Model[i].FirstName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model[i].FirstName">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="@Model[i].LastName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model[i].LastName">
            </div>
        </div>
        <hr />
    }

    <button type="submit" class="btn btn-primary">提交</button>
</form>